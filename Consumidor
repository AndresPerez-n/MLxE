        "class Consumidor:\n",
        "\n",
        "  def __init__(self,salario:int,compras:int,genero:str):\n",
        "    self.comprar= compras\n",
        "    self.salario= salario\n",
        "    self.genero= genero\n",
        "  def gener(self,genero:str):\n",
        "    if gener==\"hombre\":\n",
        "      print(\"el consumidor es un hombre\")\n",
        "    elif gener==\"mujer\":\n",
        "      print(\"el consumidor es una mujer\")\n",
        "    else:\n",
        "      print(\"por favor elegir entre hombre o mujer\")\n",
        "  def vol_riq(self,salario):\n",
        "    if self.salario >= compras:\n",
        "      self.salario = self.salario-compras\n",
        "    elif self.salario==0:\n",
        "      print(\"se ha gastado todo el salario\")\n",
        "    else:\n",
        "      print(f\"solo se le queda {self.salario} de salario\")\n",
        "\n",
        "\n",
        "  \n",
        "    "
